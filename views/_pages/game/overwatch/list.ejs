<table class="type">
    <thead>
        <tr>
            <th class="top" style="text-align:left">글 번호</th>
            <th class="top">제목</th>
            <th class="top">작성자</th>
            <th class="top">작성일</th>
            <th class="top">조회수 </th>
        </tr>
    </thead>
    <tbody class="type06">
        <% const today=new Date(); %>
            <% text.forEach(function(text, i) { %>
                <% if (text.textView==true) { %>
                    <tr>
                        <td>
                            <%= text.textNum %>
                        </td>
                        <td>
                            <form action="/<%= title %>/view_<%= text.textNum %>" method="post">
                                <input type="hidden" name="title" value="<%= title %>">
                                <input type="submit" class="write" value="<%= text.textTitle %>">
                            </form>
                        </td>
                        <td>
                            <%= text.id %>
                        </td>
                        <td>
                            <% if (!text.update) { %>
                                <% if (text.create.toLocaleDateString("ko-KR", { year: 'numeric' , month: 'long' ,
                                    day: 'numeric' })==today.toLocaleDateString("ko-KR", { year: 'numeric' ,
                                    month: 'long' , day: 'numeric' })) { %>
                                    <%= text.create.toLocaleTimeString("ko-KR", { hour: 'numeric' , minute: 'numeric' })
                                        %>
                                        <% } else { %>
                                            <%= text.create.toLocaleDateString("ko-KR", { year: 'numeric' ,
                                                month: 'long' , day: 'numeric' }) %>
                                                <% } %>
                                                    <% } else { %>
                                                        <% if (text.update.toLocaleDateString("ko-KR", { year: 'numeric'
                                                            , month: 'long' , day: 'numeric'
                                                            })==today.toLocaleDateString("ko-KR", { year: 'numeric' ,
                                                            month: 'long' , day: 'numeric' })) { %>
                                                            <%= text.update.toLocaleTimeString("ko-KR", {
                                                                hour: 'numeric' , minute: 'numeric' }) %>
                                                                <% } else { %>
                                                                    <%= text.update.toLocaleDateString("ko-KR", {
                                                                        year: 'numeric' , month: 'long' , day: 'numeric'
                                                                        }) %>
                                                                        <% } %>
                                                                            <% } %>
                        </td>
                        <td>
                            <%= text.textViewer %>
                        </td>
                    </tr>
                    <% } %>
                        <% }); %>
    </tbody>
</table>

<% if (isLoggedIn) { %>
    <form action="/write" method="post" style="text-align: center;">
        <input type="hidden" name="title" value="<%= title %>">
        <input type="submit" class="write" value="글 작성">
    </form>
    <% } %>
